//Localhost tarafında ayağa kalktığı durumda burayı kullanacak. Downstream => microservis --- Upstream => client
{
  "Routes": [
    {
      //http://localhost:5011/api/courses
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5011
        }
      ],
      //{everything} ocelottan gelen bir özellik ne yazdıysa yukarıda mikroservis tarafında da aynısını yazacaktır. //http://localhost:5000/services/catalog/courses
      "UpstreamPathTemplate": "/services/catalog/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      //Şemayı belirttik
      "UpstreamScheme": "http"
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000"
  }
}